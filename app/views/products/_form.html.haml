
- semantic_form_for @product do |f|
  %p
    = f.label :category_id
    %br
    = f.collection_select :category_id, Category.all, :id, :name

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p
    = f.label :price
    %br
    = f.text_field :price

  %p
    = f.label :description
    %br
    = f.text_area :description

  %p
    %p
    = f.submit "Submit"

